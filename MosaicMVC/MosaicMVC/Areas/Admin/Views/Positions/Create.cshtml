@using MosaicMVC.Areas.Admin.ViewModels
@{
    ViewData["Title"] = "Create";
}

@model PositionCreateVM


<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Create Position</h4>
            <p class="card-description">

            </p>
            <form method="post" asp-controller="Positions" asp-action="Create" class="forms-sample">
                <div class="form-group">
                    <label for="exampleInputName1">Name</label>
                    <input asp-for="Name" class="form-control" id="exampleInputName1" placeholder="Name">
                </div>

                <button type="submit" class="btn btn-primary me-2">Create</button>
                <a asp-action="Index" class="btn btn-light">Cancel</a>
            </form>
        </div>
    </div>
</div>
