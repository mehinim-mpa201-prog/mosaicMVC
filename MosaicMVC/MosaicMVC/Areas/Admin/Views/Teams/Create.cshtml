@using MosaicMVC.Areas.Admin.ViewModels
@{
    ViewData["Title"] = "Create";
}

@model TeamCreateVM


<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Create Category</h4>
            <p class="card-description">

            </p>
            <form method="post" asp-controller="Teams" asp-action="Create" class="forms-sample" enctype="multipart/form-data">
                <div class="form-group">
                    <label for="exampleInputName1">Name</label>
                    <input asp-for="Name" class="form-control" id="exampleInputName1" placeholder="Name">
                </div>
                <div class="form-group">
                    <label for="exampleInputAbout1">About</label>
                    <input asp-for="About" class="form-control" id="exampleInputAbout1" placeholder="About">
                </div>

                <div class="form-group">
                    <label for="exampleInputImg">Image</label>
                    <input asp-for="Img" class="form-control" id="exampleInputImg" placeholder="Img">
                </div>
                <div class="form-group">
                    <label for="examplePositionId">Position</label>
                    <select asp-for="PositionId" class="form-control" id="examplePositionId">

                        <option selected disabled>Category seç</option>
                        @foreach (Position position in ViewBag.Positions)
                        {
                            <option value="@position.Id">@position.Name</option>
                        }
                    </select>
                </div>

                <div style="color:red" asp-validation-summary="All" class="alert-danger"></div>
                <button type="submit" class="btn btn-primary me-2">Create</button>
                <a asp-action="Index" class="btn btn-light">Cancel</a>
            </form>
        </div>
    </div>
</div>
